page {
  height: 100%;
}
.cates .cates_container {
  /* less中使用calc的时候要注意 */
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  margin-top: 5rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .left_menu .active {
  font-weight: bolder;
  color: var(--themeColor);
  border-left: 8rpx solid currentColor;
}
.cates .cates_container .right_content {
  flex: 5;
}
.cates .cates_container .right_content .product_group {
  padding: 30rpx 20rpx 30rpx 20rpx;
}
.cates .cates_container .right_content .product_group .product_title {
  font-weight: bolder;
}
.cates .cates_container .right_content .product_group .product_list navigator {
  margin: 10rpx;
  background-color: #F8F8F8;
  display: flex;
  border-radius: 10rpx;
  box-shadow:  0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}
.cates .cates_container .right_content .product_group .product_list navigator image {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  width: 300rpx;
  height: 150rpx;
}
.cates .cates_container .right_content .product_group .product_list navigator .right {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cates .cates_container .right_content .product_group .product_list navigator .right .product_name {
  padding-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-style: italic;
}
.cates .cates_container .right_content .product_group .product_list navigator .right .product_price {
  padding-bottom: 10rpx;
}
