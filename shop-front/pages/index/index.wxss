.index_swiper swiper {
  width: 750rpx;
  height: 375rpx;
}
.index_swiper swiper image {
  width: 100%;
}
.sort {
  padding-top: 20rpx;
  background-color: #F7F7F7;
}
.sort .sort-item {
  display: flex;
  flex-wrap: wrap;  
}
.sort .sort-item navigator {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1 0 25%;
  margin-bottom: 10rpx;
}
.sort .sort-item navigator image {
  width: 65rpx;
  height: 65rpx;
}
.index_hot_product .product_title {
  font-size: 32rpx;
  background-color: #efefef;
  font-weight: 600;
  padding: 20rpx;
  color: #f26b1f;
}
.index_hot_product .list {
  display: flex;
  flex-wrap: wrap;
}
.index_hot_product .list .product_detail {
  margin: 7rpx;
  width: 48%;
  text-align: center;
  border-radius: 15rpx;
  box-shadow:  0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}
.index_hot_product .list .product_detail navigator image {
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  background-color: #F5F5F5;
}
.index_hot_product .list .product_detail navigator .product_title{
  color: var(--themeColor);
  font-size: 19rpx;
  border: solid;
  border-radius: 10rpx;
  line-height: 0rpx;
  background-color: #fff;
  width: 118rpx;
}
.index_hot_product .list .product_detail navigator .product_name {
  font-size: 36rpx;
  text-align: left;
  font-weight: bolder;
  white-space: nowrap;
  overflow: hidden;
  margin-top: 5rpx;
  text-overflow: ellipsis;
}
.index_hot_product .list .product_detail navigator .product_desc {
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  margin-top: 5rpx;
  text-overflow: ellipsis;
}
.index_hot_product .list .product_detail navigator .product_price {
  margin-top: 5rpx;
  text-align: left;
  color: var(--themeColor);
  font-size: 38rpx;
}
.nothing{

  background-color: #efefef;
  font: italic small-caps bold 14px/2 cursive;
  text-align: center;
  
}

                        