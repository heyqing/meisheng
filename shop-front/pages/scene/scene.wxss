.all{
  background-color: #efefef;
}
.image-view {  
  padding: 16rpx;
  display: flex;  
  justify-content: center;  
  align-items: center;  
  height: 250rpx;
}  
.centered-image{
  border-radius: 10rpx;

  height: 200rpx;
}
.recommend{
  padding: 16rpx;
  background-color: #ffffff;
}
.title{
  font-size: 32rpx;
  font-weight: bolder;
  padding: 20rpx;
}
.list{
  display: flex;
  flex-wrap: wrap;
}
.scene_detail{
  margin: 7rpx;
  width: 48%;
  text-align: center;
  border-radius: 12rpx;
  box-shadow:  0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}
.recommend .list .scene_detail navigator image{
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  background-color: #F5F5F5;
}
.end{
  padding: 10rpx;
  color: #aaa;
  text-align: center;
}